type Recipe{
    id: Int!
    name: String
    is_active:Boolean
    document_items: [DocumentItem]
}



input SaveRecipeInput{
    id: Int
    name: String!
    is_active:Boolean!
    document_items: [DocumentItemInput]
}

extend type Query {
    getRecipes:[Recipe]
    getRecipeById(recipeId: Int!): Recipe
}

extend type Mutation {
    saveRecipe(input: SaveRecipeInput!): Recipe
}